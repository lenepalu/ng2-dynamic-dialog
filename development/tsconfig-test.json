{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "rootDir": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "watch": false
    },
    "exclude": [
        "node_modules"
    ]
}
